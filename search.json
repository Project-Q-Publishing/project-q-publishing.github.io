---
layout: null
---
[
  {% for book in site.books %}
    {
      "title": "{{ book.title | escape }}",
      "author": "{{ book.author | escape }}",
      "url": "{{ book.url }}",
      "description": "{{ book.description | strip_html | strip_newlines | escape }}",
      "languages": "{{ book.programming_languages | join: ' ' }}",
      "topics": "{{ book.topics | join: ' ' }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
